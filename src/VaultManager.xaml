<Window x:Class="SekaiLayer.VaultManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SekaiLayer"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Icon="{StaticResource AppIcoIcon}"
        Title="{StaticResource AppTitle}" Height="450" Width="800">
    <Grid>
        <tb:TaskbarIcon Name="TaskbarIcon"
                        ToolTip="{StaticResource AppTitle}"
                        Visibility="Visible"
                        TrayLeftMouseDoubleClick="TaskbarIcon_OnTrayLeftMouseDoubleClick"
                        IconSource="{StaticResource AppIcoIcon}">
            <!-- IconSource="{StaticResource AppIcoIcon}" -->
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Open" Click="Open_OnClick" />
                    <MenuItem Header="Exit" Click="Exit_OnClick" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>
