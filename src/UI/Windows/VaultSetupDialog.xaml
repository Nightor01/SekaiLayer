<Window x:Class="SekaiLayer.UI.Windows.VaultSetupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Title="Vault Setup Dialog" Height="300" Width="350"
        Icon="{StaticResource AppIcoIcon}">
    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="ButtonBottomStyle" TargetType="Button">
                <Setter Property="Width" Value="60"/>
                <Setter Property="Height" Value="30"/>
                <Setter Property="Margin" Value="10, 5"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        
        <!-- Main -->
        <DockPanel Grid.Row="0" Height="30" Margin="10, 0">
            <Label DockPanel.Dock="Left" FontSize="14">Vault name</Label>
            <TextBox Width="200" HorizontalAlignment="Right" VerticalContentAlignment="Center"
                     x:Name="VaultName" FontSize="14"/>
        </DockPanel>
        <StackPanel Grid.Row="1" Margin="10, 0">     
            <DockPanel Grid.Row="1" Height="30">
                <Label DockPanel.Dock="Left" FontSize="14">Vault path</Label>
                <Button Width="200" HorizontalAlignment="Right"
                        Content="Set Folder" Click="SetFolder_OnClick" FontSize="14"/>
            </DockPanel>
            <Label Height="30" Margin="0, 10"
                   x:Name="VaultPath" Background="LightGray"/>
        </StackPanel>
        <DockPanel Grid.Row="2" Height="30" Margin="10, 0">
            <Label DockPanel.Dock="Left" FontSize="14">Encryption</Label>
            <ComboBox Width="200" HorizontalAlignment="Right"
                      x:Name="EncryptionType" FontSize="14"/>
        </DockPanel>
        
        <!-- Bottom -->
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Grid.Row="3">
            <Button Style="{StaticResource ButtonBottomStyle}" IsDefault="True"
                    Content="OK" Click="Ok_OnClick"/>
            <Button Style="{StaticResource ButtonBottomStyle}" IsCancel="True"
                    Content="Cancel" Click="Cancel_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
