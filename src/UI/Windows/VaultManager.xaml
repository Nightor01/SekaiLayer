<Window x:Class="SekaiLayer.UI.Windows.VaultManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Icon="{StaticResource AppIcoIcon}"
        Title="{StaticResource AppTitle}" Height="450" Width="450">
    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="StyleMainButton" TargetType="Button">
                <Setter Property="Width" Value="50"/>
                <Setter Property="Height" Value="50"/>
                <Setter Property="Margin" Value="5"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <!-- Icon -->
        <Image Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
               Width="150" Height="150" Source="{StaticResource DiColourAppIcon}"/>
        <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
            <Button Style="{StaticResource StyleMainButton}" ToolTip="Settings"
                    Click="SettingsButton_OnClick">
                <Image Width="35"
                       Source="{StaticResource DiPreferences}" />
            </Button>
            <Button Style="{StaticResource StyleMainButton}" ToolTip="Create new vault"
                    Click="CreateNewVault">
                <Image Width="35"
                       Source="{StaticResource DiAddVault}" />
            </Button>
            <Button Style="{StaticResource StyleMainButton}" ToolTip="Open as a vault"
                    Click="RegisterVault">
                <Image Width="35"
                       Source="{StaticResource DiOpenAsVault}" />
            </Button>
        </StackPanel>
        
        <!-- Switcher -->
        <ScrollViewer Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                      HorizontalScrollBarVisibility="Visible"
                      VerticalScrollBarVisibility="Disabled">
            <StackPanel Background="WhiteSmoke" x:Name="Vaults" Orientation="Horizontal" CanHorizontallyScroll="True"/>    
        </ScrollViewer>
    </Grid>
</Window>
