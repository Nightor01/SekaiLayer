<Window x:Class="SekaiLayer.UI.Windows.AddResourceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Add Resource" Height="350" Width="200"
        Icon="{StaticResource AppIcoIcon}"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        ResizeMode="NoResize">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <Label Content="Type of resource:" />
        
            <ComboBox Margin="5 0 5 0" ItemsSource="{Binding Path=ObjectTypes}"
                      x:Name="ObjectType" AllowDrop="False" 
                      SelectionChanged="ObjectType_OnSelectionChanged" />
        
            <Label Content="Detailed Configuration:" />
        
            <UserControl x:Name="ContentHolder" />
        </StackPanel>
        
        <StackPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom" Orientation="Horizontal"
                    HorizontalAlignment="Center" >
            <Button Content="Ok" Margin="10" Width="80" Height="40"
                    Click="Ok_OnClick" />
            <Button Content="Cancel" Margin="0 10 10 10"
                    Width="80" Height="40" Click="Cancel_OnClick" />
        </StackPanel>
    </DockPanel>
</Window>
