<Window x:Class="SekaiLayer.UI.Windows.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Icon="{StaticResource AppIcoIcon}"
        Title="Settings" Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <GroupBox Header="Startup Settings">
            <CheckBox Checked="StartMinimizedCheckedStateChanged"
                      Unchecked="StartMinimizedCheckedStateChanged"
                      x:Name="StartMinimized">
                Start minimized
            </CheckBox>
        </GroupBox>
        <Button Grid.Row="1" Width="80" HorizontalAlignment="Right"
                Margin="5" Click="UpdateSettings" x:Name="Update">
            Update
        </Button>
    </Grid>
</Window>
