<UserControl x:Class="SekaiLayer.UI.Controls.AddTileSetAssetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SekaiLayer.UI.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <GroupBox Header="TileSet" Margin="5">
        <StackPanel>
            <Label Content="Name:" />
            
            <TextBox x:Name="TileSetName" />
            
            <Label Content="File Path:" />
            
            <local:PathSelector x:Name="PathSelector" Filter="{Binding Filter}" />
            
            <Label Content="TileSet Configuration" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Configure" Click="Configure_OnClick" />
                <TextBox Grid.Column="1" IsReadOnly="True" Background="LightGray"
                         x:Name="XCountDisplay" Margin="5 0 0 0"
                         BorderBrush="Black" Text="{Binding XCount, Mode=OneWay}" />
                <TextBox Grid.Column="2" IsReadOnly="True" Background="LightGray"
                         x:Name="YCountDisplay" Margin="5 0 0 0"
                         BorderBrush="Black" Text="{Binding YCount, Mode=OneWay}" />
            </Grid>
        </StackPanel>
    </GroupBox>
</UserControl>
