<UserControl x:Class="SekaiLayer.UI.Controls.VaultDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="50"
             Loaded="VaultDisplay_OnLoaded" Name="Window"
             MouseEnter="VaultDisplay_OnMouseEnter"
             MouseLeave="VaultDisplay_OnMouseLeave">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <DockPanel Grid.Row="0" Width="{Binding ElementName=Window, Path=Width}">
            <TextBlock DockPanel.Dock="Left" VerticalAlignment="Top" Margin="5, 5, 0, 0"
                       x:Name="NameTextBlock" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"/> 
            <Button DockPanel.Dock="Right" Width="25" Height="25" HorizontalAlignment="Right"
                    VerticalAlignment="Top" Margin="5" 
                    BorderBrush="Transparent" x:Name="RemoveButton"
                    Click="RemoveButton_OnClick" ToolTip="Remove Vault">
                <Image Width="{Binding ElementName=btnRemove, Path=Width}"
                       Source="{StaticResource DiRemove}"/>
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="100">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF0000"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </DockPanel>
        
        <Canvas Grid.Row="1"
                Background="Transparent" >
            <Canvas Canvas.Left="0" Canvas.Top="0" Height="30"
                    ClipToBounds="True" x:Name="Canvas" Background="LightGray">
                <Label x:Name="PathLabel"> Vault Path </Label>
            </Canvas>
        </Canvas>
    </Grid>
</UserControl>
