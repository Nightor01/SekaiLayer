<UserControl x:Class="SekaiLayer.UI.Controls.AddImageAssetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SekaiLayer.UI.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <GroupBox Header="ImageAsset" Margin="5">
        <StackPanel>
            <Label Content="Name:"/>
            
            <TextBox x:Name="ImageName" />
            
            <Label Content="File Path:" />
            
            <local:PathSelector x:Name="PathSelector" Filter="{Binding Path=Filter}" />
        </StackPanel>
    </GroupBox>
</UserControl>
