<UserControl x:Class="SekaiLayer.UI.Controls.TileSetConfigurationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SekaiLayer.UI.Controls"
             xmlns:xcd="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="800"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="115" />
            <RowDefinition Height="2" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Hidden">
            <StackPanel Orientation="Horizontal" Height="95">
            <GroupBox Header="Sample count" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="90" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Content="x-sample count:" />
                    <xcd:IntegerUpDown Grid.Row="0" Grid.Column="1" Margin="5"
                                       Minimum="1" Maximum="256" x:Name="XCountNud"
                                       ValueChanged="XCountNud_OnValueChanged" />
                    <Label Grid.Row="1" Grid.Column="0" Content="y-sample count:" />
                    <xcd:IntegerUpDown Grid.Row="1" Grid.Column="1" Margin="5"
                                       Minimum="1" Maximum="256" x:Name="YCountNud"
                                       ValueChanged="YCountNud_OnValueChanged" />
                </Grid>
            </GroupBox>
            <GroupBox Header="Exclusions" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <local:PreviewTextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                          TextPreview="(x;y)[-(X;Y)]" x:Name="ExclusionBox"
                                          PreviewKeyUp="ExclusionBox_OnPreviewKeyUp"/>
                    <Button Grid.Row="1" Grid.Column="0" Content="Add" Margin="0 5 5 5"
                            ToolTip="Exclude using the exclusion box above" Click="AddExclusion_OnClick" />
                    <ToggleButton Grid.Row="1" Grid.Column="1" Content="Manual" Margin="0 5 0 5"
                                ToolTip="Use mouse to make a selection" x:Name="Manual" />
                    <ListBox Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Margin="5 0 0 0"
                             ItemsSource="{Binding ExcludedTiles}" 
                             x:Name="ExclusionListDisplay" SelectionMode="Multiple" />
                    <Button Grid.Row="0" Grid.Column="3" Margin="5" Content="Remove"
                            Click="RemoveExclusion_OnClick" />
                    <Button Grid.Row="1" Grid.Column="3" Margin="5" Content="Clear"
                            Click="ClearExclusion_OnClick" />
                </Grid>
            </GroupBox>
            <GroupBox Header="Help" Margin="5">
                <StackPanel Orientation="Horizontal">
                    <Button Width="30" Height="30" Content="?" FontSize="20" FontWeight="DemiBold" 
                            Click="Help_OnClick" />
                    <StackPanel Orientation="Vertical" Margin="5 0 0 0">
                        <Label Content="Perfect fit:" />
                        <Image Source="{StaticResource DiCorrectIcon}" Width="20" Height="20"
                               x:Name="PerfectFit" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Control" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <Button Content="Ok" Margin="5" Click="Ok_OnClick" />
                        <Button Content="Cancel" Margin="5" Click="Cancel_OnClick" x:Name="Cancel" />
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <ToggleButton Content="No Warnings" Margin="0 5 5 5" x:Name="WarningDisabler" />
                    </StackPanel>
                </Grid>
            </GroupBox>
        </StackPanel>
        </ScrollViewer>
        <Border Grid.Row="1" Background="Black" />
        <skia:SKElement Grid.Row="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                        PaintSurface="Canvas_OnPaintSurface" x:Name="Canvas" MouseDown="Canvas_OnMouseDown"
                        MouseUp="Canvas_OnMouseUp" MouseMove="Canvas_OnMouseMove" />
    </Grid>
</UserControl>
