<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:local="clr-namespace:SekaiLayer.UI.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/src/GlobalResourceDictionary.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <tb:TaskbarIcon x:Key="NotifyIcon"
                    ToolTip="{StaticResource AppTitle}"
                    Visibility="Visible"
                    LeftClickCommand="{Binding ShowWindowCommand}"
                    IconSource="{StaticResource AppIcoIcon}"
                    ToolTipText="Left-click to show window, right-click for menu"
                    NoLeftClickDelay="True">
        <tb:TaskbarIcon.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Open" Command="{Binding ShowWindowCommand}" />
                <MenuItem Header="Exit" Command="{Binding ExitApplicationCommand}" />
                <MenuItem Header="New Vault" Command="{Binding CreateNewVaultCommand}" />
            </ContextMenu>
        </tb:TaskbarIcon.ContextMenu>
        <tb:TaskbarIcon.DataContext>
            <local:NotifyIconViewModel />
        </tb:TaskbarIcon.DataContext>
    </tb:TaskbarIcon>
</ResourceDictionary>